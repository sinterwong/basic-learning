@PACKAGE_INIT@

# --- Self-defined macro to avoid external dependencies ---
# This macro is a minimal, self-contained implementation inspired by
# CMake's standard macro and practices seen in other robust libraries
# like yaml-cpp. It ensures this config file works even if CMake's
# standard modules aren't in the search path during find_package().
macro(check_required_components _NAME)
  foreach(comp ${${_NAME}_FIND_COMPONENTS})
    if(NOT ${_NAME}_${comp}_FOUND)
      if(${_NAME}_FIND_REQUIRED_${comp})
        # If a required component is not found, the whole package is not found.
        set(${_NAME}_FOUND FALSE)
      endif()
    endif()
  endforeach()
endmacro()

# --- Include the targets file ---
# This file contains the definition for the IMPORTED target 'logger::logger'.
# It is generated by the install(EXPORT) command.
if(NOT TARGET logger::logger)
  include("${CMAKE_CURRENT_LIST_DIR}/logger-targets.cmake")
endif()

# --- Final check for requested components ---
# This uses the self-defined macro from above.
check_required_components(logger)
